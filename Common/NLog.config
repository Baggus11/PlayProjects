<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
    autoReload="true"
    throwExceptions="false"
    internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >
  <targets>
    <target xsi:type="AsyncWrapper" name="asyncTxtLog" batchSize="100" timeToSleepBetweenBatches="100" overflowAction="Block">
      <target xsi:type="RetryingWrapper">
        <target xsi:type="File" name="txtLog"
							archiveEvery="Day" archiveFileName="${basedir}/logs/Logging{#}.log"
							archiveNumbering="Date" archiveDateFormat="yyyy-MM-dd" maxArchiveFiles="30"
							fileName="${basedir}/logs/Logging.log"
							layout="${longdate} :: ${logger} :: ${level} :: ${callsite} :: ${message} :: ${exception}"   >
        </target>
      </target>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="asyncTxtLog"></logger>
  </rules>
</nlog>